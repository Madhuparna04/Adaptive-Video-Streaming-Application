<div class="container">
        <div class="row">
            <div class="col-md-6 m-auto">
                <h1 class="text-center display-4 my-4">Video Playing ...</h1>
                <% if(file){ %>
                        <div class="card card-body mb-3">
                            <video style="width: 100%;" controls autoplay> 
                                <source src="/stream/<%= file %>" type="video/mp4">
                            </video>
                        </div>
                <% } else { %>
                    <p> No files to show</p>
                <% } %>
            </div>
        </div>
    </div>

